<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="toolbar">
        <item name="fontFamily">@font/comfortaa</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="IconButton" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/comfortaa</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="FilledButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:fontFamily">@font/comfortaa</item>
        <item name="android:shadowColor">@color/purple_500</item>
        <item name="android:shadowRadius">10</item>
    </style>
</resources>